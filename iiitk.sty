% theorem styles

\declaretheoremstyle[
  spaceabove=20pt,
  spacebelow=20pt,
  headfont=\sffamily\bfseries,
  notefont=\sffamily\bfseries,
  bodyfont=\normalfont,
  postheadspace=1em
]{defaultstyle}



% mdframed boxed theoremstyles

\global\mdfdefinestyle{theoremstyled}{
  roundcorner=10pt,
  nobreak=true,
  linecolor=sapphireblue,linewidth=2pt,
  frametitlerule=true,
  frametitlebackgroundcolor=sapphireblue!20,
  backgroundcolor=limegreen!20,
  innertopmargin=\topskip
}

\global\mdfdefinestyle{bluebox}{
  nobreak=true,
  linecolor=black,
  linewidth=4pt,
  topline=false, bottomline=false,rightline=false,
  backgroundcolor=sapphireblue!20,
  innertopmargin=\topskip
}

\global\mdfdefinestyle{greenbox}{
  nobreak=true,
  linecolor=black,
  linewidth=4pt,
  topline=false, bottomline=false,rightline=false,
  backgroundcolor=limegreen!20,
  innertopmargin=\topskip
}


\makeatletter
\define@key{thmdef}{mdthm}[{}]{%
\thmt@trytwice{\def\thmt@theoremdefiner{\mdtheorem[#1]}}{}}
\makeatother

\declaretheorem[mdthm={style=theoremstyled},numberwithin=section]{theorem}
\declaretheorem[mdthm={style=bluebox},numberwithin=section]{remark}
\declaretheorem[mdthm={style=greenbox},numberwithin=section]{algorithm}
\declaretheorem[mdthm={style=bluebox},numberwithin=section]{idea}
\declaretheorem[mdthm={style=theoremstyled},numberwithin=section]{proposition}
\declaretheorem[mdthm={style=theoremstyled },numberwithin=section]{lemma}



\declaretheorem[style=defaultstyle,numberwithin=section]{definition}
\declaretheorem[style=defaultstyle,numberwithin=section]{problem}
\declaretheorem[style=defaultstyle,numbered=no]{question}
\declaretheorem[style=defaultstyle,numbered=no]{example}














